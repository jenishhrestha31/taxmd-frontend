# CI pipeline to lint, format-check, build, and test Next.js app
name: Build & Test

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # âœ… Step 1: Checkout repo code
      - name: â¬‡ï¸ Checkout Code
        uses: actions/checkout@v3

      # âœ… Step 2: Set up Node.js and cache Yarn
      - name: ğŸ§¶ Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'yarn'

      # âœ… Step 3: Install dependencies
      - name: ğŸ“¦ Install dependencies
        run: yarn install --frozen-lockfile

      # âœ… Step 4: Run Prettier check (fail if formatting is off)
      - name: ğŸ¨ Check formatting
        run: yarn format:check

      # âœ… Step 5: Lint with ESLint
      - name: âœ… Lint code
        run: yarn lint

      # âœ… Step 6: Build the project
      - name: ğŸ—ï¸ Build project
        run: yarn build

      # âœ… Step 7: Run unit/component tests
      - name: ğŸ§ª Run tests
        run: yarn test
